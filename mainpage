  <!-- Crypto API JS -->
  <script>
    async function fetchCryptoPrices() {
      const url = 'https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&ids=bitcoin,ethereum,binancecoin,solana';
      try {
        const res = await fetch(url);
        const data = await res.json();
        const tbody = document.querySelector('#crypto-table tbody');
        tbody.innerHTML = '';
        data.forEach(coin => {
          const row = `
            <tr>
              <td><img src="${coin.image}" width="24" alt="${coin.name}">${coin.name}</td>
              <td>$${coin.current_price.toLocaleString()}</td>
              <td class="${coin.price_change_percentage_24h >= 0 ? 'text-success' : 'text-danger'}">
                ${coin.price_change_percentage_24h.toFixed(2)}%
              </td>
            </tr>`;
          tbody.innerHTML += row;
        });
      } catch (error) {
        console.error(error);
        document.querySelector('#crypto-table tbody').innerHTML = '<tr><td colspan="3">Error al cargar datos</td></tr>';
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      fetchCryptoPrices();
      setInterval(fetchCryptoPrices, 60000);
    });
  </script>
